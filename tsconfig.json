{
	"extends": "astro/tsconfigs/base",
	"compilerOptions": {
		"noEmit": true,
		"outDir": "dist",
		"jsx": "preserve",
		"declaration": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"verbatimModuleSyntax": true,
		"types": ["node", "astro/client"],
		"allowImportingTsExtensions": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"src",
		"preview",
		"config.js",
		"rollup.config.js",
		"tailwind.config.mjs",
		"vitest.config.ts"
	]
}
