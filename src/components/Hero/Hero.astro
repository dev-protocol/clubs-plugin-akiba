---
const { image, logo, text } = Astro.props as {
	image?: string
	logo?: string
	text?: string
}
---

<section class="relative md:mb-2 md:p-2">
	<div
		class="flex flex-col-reverse overflow-hidden rounded-b-xl bg-black md:flex-row md:rounded"
	>
		<div
			class="flex w-full flex-col justify-center gap-2 px-8 py-9 md:w-[calc((100%/3)*1)] md:px-8 md:py-0"
		>
			<img src={logo} class="" alt="" />
			<p
				class="text-[6.107vw] leading-none text-white md:text-[1.3889vw] md:leading-normal"
			>
				{text}
			</p>
		</div>
		<div class="w-full md:w-[calc((100%/3)*2)]">
			<img src={image} class="object-cover" alt="" />
		</div>
	</div>
</section>
