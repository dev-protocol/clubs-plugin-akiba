---
const { image, logo, text } = Astro.props as {
	image?: string
	logo?: string
	text?: string
}
---

<section class="relative md:mb-2 md:p-2">
	<div class="flex flex-col-reverse md:flex-row overflow-hidden rounded-b-xl md:rounded bg-black">
		<div class="flex gap-2 w-full md:w-[calc((100%/3)*1)] flex-col justify-center px-8 py-9 md:px-8 md:py-0">
			<img src={logo} class="" alt="" />
			<p class="text-[6.107vw] md:text-[1.3889vw] text-white leading-none md:leading-normal">
				{text}
			</p>
		</div>
		<div class="w-full md:w-[calc((100%/3)*2)]">
			<img src={image} class="object-cover" alt="" />
		</div>
	</div>
</section>
